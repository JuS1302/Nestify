<div class="mb-3">
      <h1 class="mt-4">Chambre</h1>
    </div>

    <hr class="custom-hr mt-1">

    <div id="chambreCarousel" class="carousel slide" data-bs-ride="carousel">
      <div class="carousel-inner">
        <% if package_chambre.is_a?(String) %>
          <p class="mt-2"><%= package_chambre %></p>
        <% else %>
          <% package_chambre.each_with_index do |package, index| %>
            <div class="carousel-item <%= 'active' if index == 0 %>">
              <div class="card mx-auto style-package-index" style="max-width: 300px;">
              <%= cl_image_tag package.products.first.photo.key, class:"card-img-top picture-card-index"%>
                <div class="card-body-index d-flex flex-column">
                  <h5 class="card-title-index"><%= package.name %></h5>
                  <p class="card-text-index"><%= package.description %></p>
                  <div class="price-index mb-2">
                    <h6>Prix : <%= package.budget.round %>€ </h6>
                  </div>
                  <% path = dashboard ? proposal_path(package) : package_path(package, params: params)  %>
                  <%= link_to path, class: "btn rounded-shadow-button mt-2 mb-4" do %>
                    Voir le pack
                  <% end %>
                  <% if dashboard %>
                  <div class="d-flex justify-content-between align-items-center">
                  <!-- Checkbox and Label -->
                  <% proposal = Proposal.find_by(package: package, user: current_user) %>
                    <%= simple_form_for proposal, url: proposal_path(proposal), method: :delete, html: { data: { controller: "budget" } } do |f| %>
                    <div class="d-flex align-items-center gap-2">
                      <%= f.input :bought, as: :boolean, label: "Acheté", input_html: { id: "card-checkbox-#{package.id}", class: "card-checkbox ", data: { action: "change->budget#destroy" } } %>
                    </div>
                  <% end %>


                  <!-- Trash Icon -->
                  <div>
                    <%= link_to proposal_path(proposal), data: {turbo_method: :delete, turbo_confirm: "Are you sure?"} do %>
                    <i class="fa-solid fa-trash trash-dashboard"></i>
                    <% end %>
                  </div>
                </div>
                <% end %>
                </div>
              </div>
            </div>
          <% end %>
           <button class="carousel-control-prev" type="button" data-bs-target="#chambreCarousel" data-bs-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Précédent</span>
      </button>
      <button class="carousel-control-next" type="button" data-bs-target="#chambreCarousel" data-bs-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Suivant</span>
      </button>
        <% end %>
      </div>

      <!-- Carousel Controls -->

    </div>
