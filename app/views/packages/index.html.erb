 <!-- jQuery -->
  <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
  <!-- Owl Carousel CSS -->
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/OwlCarousel2/2.3.4/assets/owl.carousel.min.css">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/OwlCarousel2/2.3.4/assets/owl.theme.default.min.css">
  <!-- Owl Carousel JS -->
  <script src="https://cdnjs.cloudflare.com/ajax/libs/OwlCarousel2/2.3.4/owl.carousel.min.js"></script>


<div class="container">

  <div class="text-center mt-3">
    <h1>La sélection de cocons</h1>
  </div>

  <div class="text-center mt-3">
    <p>
      Tu trouveras ici tous les packs de décoration générés pour toi. Explore-les et choisis celui qui correspond le mieux à tes envies !
    </p>
  </div>

  <!-- Chambre Section -->
  <% if params[:chambre] == "1" %>
      <%= render "packages/chambre_packages", package_chambre: @package_chambre, dashboard: nil, params: @params%>
  <% end %>

  <!-- Salon Section -->
  <% if params[:salon] == "1" %>
     <%= render "packages/salon_packages", package_salon: @package_salon, dashboard: nil, params: @params %>
  <% end %>

<!-- Sdb Section -->
  <% if params[:salle_de_bain] == "1" %>
    <%= render "packages/salle_de_bain_packages", package_sdb: @package_sdb, dashboard: nil, params: @params %>
  <% end %>

<!-- Cuisine Section -->
  <% if params[:cuisine] == "1" %>
    <%= render "packages/cuisine_packages", package_cuisine: @package_cuisine, dashboard: nil, params: @params %>
  <% end %>

</div>
